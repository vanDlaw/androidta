<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ta_bg">

    <LinearLayout
        android:layout_marginTop="340dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:onClick="GotoMulai"
            android:id="@+id/button"
            android:src="@drawable/klik_btn_mulai"
            android:background="#00000000"
            android:layout_height="40dp"
            android:layout_width="100dp"
            android:adjustViewBounds="true"
            android:layout_marginRight="5dp"
            android:scaleType="fitCenter" />

        <ImageButton
            android:onClick="GotoSetting"
            android:layout_marginLeft="5dp"
            android:id="@+id/buttonsetting"
            android:src="@drawable/klik_btn_setting"
            android:background="#00000000"
            android:layout_height="40dp"
            android:layout_width="100dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <ImageButton
            android:id="@+id/keluarbutton"
            android:src="@drawable/klik_btn_keluar"
            android:background="#00000000"
            android:layout_height="40dp"
            android:layout_width="100dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />
    </LinearLayout>

</LinearLayout>