<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_setting"
    tools:context="com.example.ervan.ta2pelacak.activity.SettingActivity">
    android:clipToPadding="true"
    android:fillViewport="true">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >


        <TextView
            android:text="Nomor Pin anda adalah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:layout_marginTop="99dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="pinku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setting_pin"
            android:textStyle="normal|bold"
            android:textSize="42sp"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Pilih Device Lalu Masukkan PIN yang akan dilacak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_below="@+id/setting_pin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:textAlignment="center" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_device"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_alignRight="@+id/textView2"
            android:layout_alignEnd="@+id/textView2" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editPIN"
            android:hint="PIN"
            android:textAlignment="center"
            android:textSize="42sp"
            android:textStyle="normal|bold"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/spinner_device"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:singleLine="false" />

        <Button
            android:text="Simpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/simpan_setting"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_below="@+id/editPIN"
            android:layout_alignRight="@+id/setting_pin"
            android:layout_alignEnd="@+id/setting_pin"
            android:layout_alignLeft="@+id/setting_pin"
            android:layout_alignStart="@+id/setting_pin" />

    </RelativeLayout>
</ScrollView>
